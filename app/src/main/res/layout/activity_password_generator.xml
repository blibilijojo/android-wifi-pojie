<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordGeneratorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AndroidWifipojie.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AndroidWifipojie.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 生成的密码显示区域 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/password_display_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/generated_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成的密码:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/generated_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="password123"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:background="@drawable/rounded_corner_light"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generated_password_label" />

            <TextView
                android:id="@+id/password_strength_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="强度: 强"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generated_password_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 密码长度设置 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/password_length_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toBottomOf="@+id/password_display_layout">

            <TextView
                android:id="@+id/password_length_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码长度:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/password_length_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:min="4"
                android:max="128"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/password_length_edt"
                app:layout_constraintTop_toBottomOf="@+id/password_length_label" />

            <EditText
                android:id="@+id/password_length_edt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:inputType="number"
                android:text="12"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/password_length_seekbar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_length_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 字符类型选择 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/character_types_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toBottomOf="@+id/password_length_layout">

            <TextView
                android:id="@+id/character_types_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字符类型:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/include_lowercase_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="包含小写字母 (a-z)"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/character_types_label" />

            <CheckBox
                android:id="@+id/include_uppercase_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="包含大写字母 (A-Z)"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_lowercase_cb" />

            <CheckBox
                android:id="@+id/include_digits_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="包含数字 (0-9)"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_uppercase_cb" />

            <CheckBox
                android:id="@+id/include_symbols_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="包含特殊字符 (!@#$%)"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_digits_cb" />

            <CheckBox
                android:id="@+id/exclude_similar_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="排除相似字符 (0O1lI)"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_symbols_cb" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 操作按钮 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/character_types_layout">

            <Button
                android:id="@+id/generate_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="重新生成"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/copy_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/copy_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="复制密码"
                app:layout_constraintLeft_toRightOf="@+id/generate_btn"
                app:layout_constraintRight_toLeftOf="@+id/add_to_password_book_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/add_to_password_book_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="添加到密码本"
                app:layout_constraintLeft_toRightOf="@+id/copy_btn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 重新生成悬浮按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_refresh_24"
        app:backgroundTint="?attr/colorPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>